<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="1100.0" stylesheets="@Estilos.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Interfaz.ControladorDeInterfaz">

    <top>
        <HBox alignment="CENTER" prefHeight="60.0" styleClass="barra-titulo">
            <Label text="AGENDA" textFill="WHITE">
                <font> <Font name="System Bold" size="28.0" /> </font>
            </Label>
        </HBox>
    </top>

    <right>
        <VBox alignment="TOP_CENTER" prefWidth="260.0" spacing="12.0" styleClass="barra-lateral" BorderPane.alignment="CENTER">
            <padding> <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /> </padding>
            <children>

                <Label text="PERSONAS" textFill="WHITE">
                    <font> <Font name="System Bold" size="18.0" /> </font>
                </Label>

                <Button fx:id="botonAnadir" onAction="#accionBotonAñadirPersona" maxWidth="Infinity" prefHeight="40.0" styleClass="boton-blanco" text="ANADIR PERSONA" />
                <Button fx:id="botonBuscar" onAction="#accionBotonBuscarPersona" maxWidth="Infinity" prefHeight="40.0" styleClass="boton-blanco" text="BUSCAR" />
                <Button fx:id="botonModificar" onAction="#accionBotonModificarPersona" maxWidth="Infinity" prefHeight="40.0" styleClass="boton-blanco" text="MODIFICAR NOMBRE" />
                <Button fx:id="botonEliminar" onAction="#accionBotonEliminarPersona" maxWidth="Infinity" prefHeight="40.0" styleClass="boton-blanco" text="ELIMINAR PERSONA" />

                <HBox prefHeight="15.0" /> <Label text="TELEFONOS" textFill="WHITE">
                <font> <Font name="System Bold" size="16.0" /> </font>
            </Label>

                <Button fx:id="botonAnadirTelefono" onAction="#accionBotonAñadirTelefono" maxWidth="Infinity" prefHeight="35.0" styleClass="boton-azul-claro" text="AGREGAR TELEFONO" />
                <Button fx:id="botonEliminarTelefono" onAction="#accionBotonEliminarTelefono" maxWidth="Infinity" prefHeight="35.0" styleClass="boton-azul-claro" text="QUITAR TELEFONO" />

                <HBox prefHeight="15.0" /> <Label text="DIRECCIONES" textFill="WHITE">
                <font> <Font name="System Bold" size="16.0" /> </font>
            </Label>

                <Button fx:id="botonAnadirDireccion" onAction="#accionBotonAñadirDireccion" maxWidth="Infinity" prefHeight="35.0" styleClass="boton-azul-claro" text="AGREGAR DIRECCION" />
                <Button fx:id="botonEliminarDireccion" onAction="#accionBotonEliminarDireccion" maxWidth="Infinity" prefHeight="35.0" styleClass="boton-azul-claro" text="QUITAR DIRECCION" />

            </children>
        </VBox>
    </right>

    <center>
        <SplitPane dividerPositions="0.55">
            <items>
                <VBox spacing="5.0" style="-fx-background-color: white;">
                    <padding> <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /> </padding>

                    <Label text="LISTA DE PERSONAS" styleClass="label-centrado" maxWidth="Infinity" alignment="CENTER" />

                    <TableView fx:id="tablaPersonas" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="columnaId" prefWidth="50.0" text="ID" />
                            <TableColumn fx:id="columnaNombre" prefWidth="150.0" text="NOMBRE" />
                        </columns>
                        <columnResizePolicy> <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /> </columnResizePolicy>
                    </TableView>
                </VBox>

                <VBox spacing="10.0" style="-fx-background-color: white;">
                    <padding> <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /> </padding>

                    <Label text="TELEFONOS ASOCIADOS" styleClass="label-centrado" maxWidth="Infinity" alignment="CENTER" />
                    <TableView fx:id="tablaTelefonos" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="columnaNumero" prefWidth="100.0" text="NUMERO" />
                        </columns>
                        <columnResizePolicy> <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /> </columnResizePolicy>
                    </TableView>

                    <Label text="DIRECCIONES ASOCIADAS" styleClass="label-centrado" maxWidth="Infinity" alignment="CENTER" />
                    <TableView fx:id="tablaDirecciones" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="columnaDireccionDetalle" prefWidth="100.0" text="DIRECCION DETALLADA" />
                        </columns>
                        <columnResizePolicy> <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /> </columnResizePolicy>
                    </TableView>

                </VBox>
            </items>
        </SplitPane>
    </center>

</BorderPane>